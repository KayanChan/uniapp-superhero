<view class="wrapper" bind:__l="__l"><view class="date-weekday"><text>5月29日</text><text>星期三</text></view><view class="title">Today</view><swiper class="swiper-banner" indicator-dots="true" autoplay="true" interval="3000" circular="true"><block wx:for="{{bannerData}}" wx:for-item="item" wx:for-index="index" wx:key="id"><block wx:if="{{item.isShow}}"><swiper-item><view class="swiper-item"><image src="{{item.image}}" mode="aspectFit" alt class="_img"></image></view></swiper-item></block></block></swiper><view class="title">近期热门</view><scroll-view class="recent-hot" scroll-x="true"><block wx:for="{{hotData}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="scroll-view-item"><view class="cover"><image src="{{item.cover}}" mode="aspectFit" alt class="_img"></image></view><view class="name">{{item.name}}</view><view class="score">{{item.score+"分"}}</view></view></block></scroll-view><view class="title">最新预告</view><view class="new-trailer"><block wx:for="{{trailerData}}" wx:for-item="item" wx:for-index="index" wx:key="id"><block wx:if="{{index<2}}"><video class="video-item" src="{{item.trailer}}"></video></block></block></view><view class="title">猜你喜欢</view><view class="uLike-film"><block wx:for="{{uLikeData}}" wx:for-item="item" wx:for-index="__i1__" wx:key="id"><view class="uLike-film-item"><view class="film-cover"><image src="{{item.cover}}" alt mode="aspectFit" class="_img"></image></view><view class="film-info"><view class="name">{{item.name}}</view><view class="original-name">{{item.originalName}}</view><view class="tags">{{item.basicInfo}}</view><view class="time">{{item.releaseDate}}</view></view></view></block></view></view>