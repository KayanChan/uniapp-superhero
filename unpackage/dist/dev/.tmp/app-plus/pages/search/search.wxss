._ul,
._li {
  margin: 0;
  padding: 0;
  list-style: none;
}
.wrapper {
  padding-top: 40rpx;
}
.title {
  margin: 30rpx 20rpx 20rpx 20rpx;
  font-weight: bold;
  font-size: 40rpx;
}
.sub-title {
  margin: 20rpx;
  font-weight: bold;
  font-size: 32rpx;
}
.search-bar {
  margin: 10rpx 20rpx 100rpx 20rpx;
  padding: 10rpx 20rpx;
  background-color: aliceblue;
  border-radius: 10rpx;
  font-size: 32rpx;
}
.search-bar .search-input {
  height: 60rpx;
}
.hot-search {
  margin-top: 0rpx;
  padding: 0 20rpx;
}
.hot-search ._li {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #f5f5f5;
  color: #515151;
  font-size: 32rpx;
}

